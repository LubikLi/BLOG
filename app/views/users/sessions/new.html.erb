<h2>Log in</h2>

<%= form_for :user, url: user_session_path do |f| %>
    <div class="field">
      <%= f.label :phone %><br/>
      <%= f.telephone_field :phone,
                            id: 'inputPhone',
                            placeHolder: '手机号',
                            maxlength: '11',
                            pattern: '^(13[0-9]|14[579]|15[0-3,5-9]|17[0135678]|18[0-9])\\d{8}$',
                            'data-error': '您输入的手机号码格式不正确',
                            value: params.dig(:user, :account),
                            required: true
      %>
    </div>

    <div class="field">
      <%= f.label :password %><br/>
      <%= f.password_field :pre_pass, autocomplete: 'new-password' %>
    </div>
    <div class="field validation-code">
      <%= f.text_field :validation_code,
                       class: 'form-control',
                       placeHolder: '6位数验证码',
                       pattern: '^\d{6,}$',
                       maxlength: '6',
                       required: true %>
      <div class="get-code">
        <button type="button" class="validation-code-btn">
          获取验证码
        </button>
      </div>
    </div>
    <div class="actions">
      <button type="submit" class="login-button btn-primary">登录</button>
    </div>
<% end %>
<%= link_to ' go back ', articles_path %>