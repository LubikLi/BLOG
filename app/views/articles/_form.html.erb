<%= form_for @article do |f| %>
    <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@article.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>Article Tag</p>
    <p class="form-group">
      <select name="tags[]" id="tags" class="form-input no-bs-select" data-placeholder="请输入标签:" multiple>
        <%= options_for_select(Tag.all.map {|c| [c.name, c.name]}, @article.tags.map(&:name)) %>
      </select>
    </p>
    <p>
      <%= f.label :article_type %><br>
      <%= f.text_field :article_type %>
    </p>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
    <p class="butt">
      <%= f.submit %>
    </p>

<% end %>
